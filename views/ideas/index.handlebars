{{#each ideas}}
<h3>Your Ideas</h3>
<div class="card card-body mb-2"> <!--Margin body which is mb2-->
<h4> {{title}}</h4>
<p>{{details}}</p>
<p class="story-text">{{stripTags}}</p>
<a class="btn btn-success mb-2" href="/ideas/edit/{{id}}">Edit</a>
<form method="post" action="/ideas/{{id}}?_method=DELETE">
<input type="hidden" name="_method" value="DELETE">
<input type="submit" class="btn btn-danger btn-block" value="Delete">
</form>
</div>
{{else}}
<h3 class="h1" >Welcome, {{user.name}}</h3>
<p>You have no ideas listed yet.</p>
<a href="/ideas/add" class="btn btn-info btn-lg">Click here to add ideas!</a>
{{/each}}